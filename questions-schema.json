{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DB専門家試験問題集スキーマ",
  "description": "データベーススペシャリスト試験問題集のJSONスキーマ定義",
  "type": "object",
  "properties": {
    "sections": {
      "type": "array",
      "description": "問題のセクション（分野）一覧",
      "items": {
        "$ref": "#/definitions/Section"
      },
      "minItems": 1
    }
  },
  "required": ["sections"],
  "additionalProperties": false,
  
  "definitions": {
    "Section": {
      "type": "object",
      "description": "問題のセクション（分野）",
      "properties": {
        "id": {
          "type": "string",
          "description": "セクションの一意識別子（HTMLのidとして使用）",
          "pattern": "^[a-z][a-z0-9-]*$",
          "examples": ["database-design", "sql", "normalization"]
        },
        "title": {
          "type": "string",
          "description": "セクションのタイトル",
          "minLength": 1,
          "examples": ["データベース設計", "SQL", "正規化・データモデリング"]
        },
        "questions": {
          "type": "array",
          "description": "このセクションに含まれる問題一覧",
          "items": {
            "$ref": "#/definitions/Question"
          },
          "minItems": 1
        }
      },
      "required": ["id", "title", "questions"],
      "additionalProperties": false
    },
    
    "Question": {
      "type": "object",
      "description": "個別の問題",
      "properties": {
        "id": {
          "type": "string",
          "description": "問題の一意識別子",
          "pattern": "^q[0-9]+-[0-9]+$",
          "examples": ["q1-1", "q2-3", "q5-10"]
        },
        "number": {
          "type": "string",
          "description": "問題番号の表示文字列",
          "pattern": "^問題 [0-9]+-[0-9]+$",
          "examples": ["問題 1-1", "問題 2-3", "問題 5-10"]
        },
        "type": {
          "type": "string",
          "description": "問題の種類",
          "enum": ["single_choice", "multiple_choice", "essay"],
          "default": "single_choice"
        },
        "question": {
          "type": "string",
          "description": "問題文",
          "minLength": 10
        },
        "choices": {
          "type": "array",
          "description": "選択肢（記述式問題では不要）",
          "items": {
            "$ref": "#/definitions/Choice"
          },
          "minItems": 2,
          "maxItems": 8
        },
        "correct": {
          "description": "正解",
          "oneOf": [
            {
              "type": "string",
              "description": "単一選択問題の正解（選択肢のvalue）",
              "pattern": "^[a-h]$"
            },
            {
              "type": "array",
              "description": "複数選択問題の正解（選択肢のvalue配列）",
              "items": {
                "type": "string",
                "pattern": "^[a-h]$"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            {
              "type": "string",
              "description": "記述式問題（正解なし）",
              "enum": [""]
            }
          ]
        },
        "explanation": {
          "type": "string",
          "description": "解説または解答例",
          "minLength": 10
        }
      },
      "required": ["id", "number", "question", "correct", "explanation"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": { "enum": ["single_choice", "multiple_choice"] }
            }
          },
          "then": {
            "required": ["choices"],
            "properties": {
              "choices": {
                "minItems": 2
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "essay" }
            }
          },
          "then": {
            "properties": {
              "correct": { "const": "" },
              "choices": false
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "single_choice" }
            }
          },
          "then": {
            "properties": {
              "correct": {
                "type": "string",
                "pattern": "^[a-h]$"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "multiple_choice" }
            }
          },
          "then": {
            "properties": {
              "correct": {
                "type": "array"
              }
            }
          }
        }
      ]
    },
    
    "Choice": {
      "type": "object",
      "description": "選択肢",
      "properties": {
        "value": {
          "type": "string",
          "description": "選択肢の値（a, b, c, ...）",
          "pattern": "^[a-h]$"
        },
        "text": {
          "type": "string",
          "description": "選択肢の表示テキスト",
          "minLength": 1
        }
      },
      "required": ["value", "text"],
      "additionalProperties": false
    }
  }
}